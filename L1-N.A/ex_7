import numpy as np

pontos_3d = (np.random.rand(10,3)*4 - 2)

pontos_fora = 0

pontos_dentro = 0

for ponto in pontos_3d:

    x = ponto[0]
    y = ponto[1]
    z = ponto[2]



    if (x - 0.25)**2 + (y - 0.5)**2 + (z - 0.75)**2 > 1:

        pontos_fora += 1

        print('Ponto fora')
    else:

        pontos_dentro += 1

        print('Ponto dentro')


print('O número de pontos dentro é', pontos_dentro)
print('\n')
print('O número de pontos fora é', pontos_fora)
